<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArtPlantMallChallenge.Styles.Fonts">

    <!-- FONT FAMILIES -->
    <OnPlatform 
        x:Key="Futura"
        x:TypeArguments="x:String"
        iOS="Futura-Bold"
        Android="Futura.ttf#Futura-Bold"/>

    <OnPlatform 
        x:Key="FuturaHeavy"
        x:TypeArguments="x:String"
        iOS="FuturaHeavy"
        Android="FuturaHeavy.ttf#Futura Hv BT"/>

    <OnPlatform 
        x:Key="FuturaMedium"
        x:TypeArguments="x:String"
        iOS="FuturaMediumBt"
        Android="FuturaMediumBt.ttf#Futura Md BT"/>

    <!-- FONT SIZES -->
    <x:Double x:Key="FontSize10">10</x:Double>
    <x:Double x:Key="FontSize12">12</x:Double>
    <x:Double x:Key="FontSize14">14</x:Double>
    <x:Double x:Key="FontSize20">20</x:Double>
    <x:Double x:Key="FontSize30">30</x:Double>
    <x:Double x:Key="FontSize48">48</x:Double>
    
</ResourceDictionary>